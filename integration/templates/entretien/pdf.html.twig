{% block body %}

    <div class="content">
    <div class="container-fluid">
    <div class="row">
    <div class="col-md-12">
    <div class="card">
    <div class="card-header card-header-primary">
        <h1 align="center" style="color:blue;">Entretiens</h1>
        <h2  align="center"style="color:orange;" > Liste Des Entretiens </h2>
    </div>
    <!DOCTYPE html>
    <html>
    <head>
        <style>
            #customers {
                font-family: Arial, Helvetica, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            #customers td, #customers th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #customers tr:nth-child(even){background-color: #f2f2f2;}

            #customers tr:hover {background-color: #ddd;}

            #customers th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: royalblue;
                color: white;
            }
        </style>
    </head>
<body>

<table id="customers">

    <tr>

        <th>ID</th>
        <th>Libelle</th>
        <th>Description</th>
        <th>Date</th>
        <th>ID Evaluation</th>
        <th>ID Participant </th>

    </tr>
    </thead>
    <tbody>
    {% for e in entretiens %}
        <tr>
            <td>{{ e.id }}</td>
            <td>{{ e.Libelle}}</td>
            <td>{{ e.Description}}</td>
            <td>{{ e.Dateentretien}}</td>
            <td>{{ e.IdEvaluation }}</td>
            {% if e.IdParticipant == NULL %} <td>Non Assign√©</td> {% else %} <td>{{ e.IdParticipant }}</td>{% endif %}
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}