{% extends 'HoussemBack.html.twig' %}
{% block body %}

    <div class="clearfix mb-20">
        <div class="pull-left">
            <h4 class="text-blue h4">Liste des Quiz</h4>

        </div>

    </div>
    <table class="table">
        <tr class="table-light">

            <th>ID</th>
            <th>Libelle</th>
            <th>Ajouter Question</th>
            <th>Afficher Quiz</th>

        </tr>
        {% for Evaluation in classe %}
            <tr>
                <td>
                    {{Evaluation.ID}}
                </td>
                <td>
                    {{Evaluation.Libelle}}
                </td>
                <td>
                    <form action="{{ path('ajouterQuiz',{'idE':Evaluation.id})}}"><button class="btn btn-outline-primary">Ajouter Question</button></form>
                </td>
                <td>
                    <form action="{{ path('ListQuiz',{'idE':Evaluation.id})}}"><button class="btn btn-outline-primary">Afficher Quiz</button></form>
                </td>
            </tr>
        {% endfor %}

    </table>



{% endblock %}