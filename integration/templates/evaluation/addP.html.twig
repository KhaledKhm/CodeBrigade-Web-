{% extends 'HoussemBack.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ajouter Participation au Evaluation</title>
</head>
<body>

<br>
<br>
<br>

<div class="pd-20 card-box mb-30">
    <h2>Cr√©er Participation au Evaluation</h2> <br> <br>
    <div class="clearfix">

    </div>
<form action="" method="POST" name="form" id="form">
    Evaluation <input class="form-control form-control-sm form-control-line" type="text" placeholder="id Evaluation" name="idE" readonly value={{ Evaluation.id }} hidden>
    <input class="form-control form-control-sm form-control-line" type="text" placeholder="id Evaluation"  readonly value={{ Evaluation.Libelle }}>
    <br>
    Participant <select class="custom-select col-12" name="idP">
        {% for Utilisateur in classe %}
            {% if Utilisateur.role=="ROLE_Candidat" %}
            {% set cmp=0 %}
            {% for p in participations %}
                {% if p.idE==Evaluation.id and p.idP==Utilisateur.Id %} {% set cmp=cmp+1 %} {% endif %}
            {% endfor %}
            {% if cmp==0 %}
            <option value={{ Utilisateur.Id }}>{{ Utilisateur.nomPersonne }} {{ Utilisateur.prenomPersonne }}</option>
            {% endif %}
            {% endif %}
        {% endfor %}
    </select>
    <br>
    <br>
    <br>
    <button class="btn btn-outline-primary" type="submit">Ajouter Participant</button>
</form>
</div>
</body>
</html>
{% endblock %}